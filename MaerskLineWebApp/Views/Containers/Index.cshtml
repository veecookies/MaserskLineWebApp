@model IEnumerable<MaerskLineWebApp.Models.Container>

@{
    ViewBag.Title = "Container Page";
}

<h2>Containers</h2>
<br>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Container_Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Container_Weight)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Container_Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Container_Weight)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ContainerID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ContainerID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ContainerID })
        </td>
    </tr>
}

</table>

<p>
    <button class="btn btn-default">@Html.ActionLink("Create New", "Create")</button>
</p>

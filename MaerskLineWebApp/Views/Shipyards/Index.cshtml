@model IEnumerable<MaerskLineWebApp.Models.Shipyard>

@{
    ViewBag.Title = "Shipyard Page";
}

<h2>Shipyards</h2>
<br>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Shipyard_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Shipyard_Location)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Shipyard_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Shipyard_Location)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ShipyardID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ShipyardID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ShipyardID })
        </td>
    </tr>
}

</table>

<p>
    <button class="btn btn-default">@Html.ActionLink("Create New", "Create")</button>
</p>
